{
	"version": "1.0",
	"label": "app_name",
	"engine": {"architecture": "starlark", "version": 2},
	"files": [ "chat.star" ],

	"database": {
		"schema": 1,
		"file": "chat.db",
		"create": {"function": "database_create"}
	},

	"icons": [
		{"path": "chat", "label": "app_name", "icon": "chat.png"}
	],

	"paths": {
		"chat": {
			"actions": {
				"": {"file": "web/dist/index.html"},
				"assets": {"files": "web/dist/assets"},
				"create": {"function": "action_create", "public": true},
				"images": {"files": "web/dist/images"},
				"list": {"function": "action_list", "public": true},
				"new": {"function": "action_new", "public": true},
				":chat": {"function": "action_view", "public": true},
				":chat/:name": {"function": "action_view", "public": true},
				":chat/messages": {"function": "action_messages", "public": true},
				":chat/send": {"function": "action_send", "public": true}
			}
		}
	},

	"services": {
		"chat": {
			"events": {
				"message": {"function": "event_message"},
				"new": {"function": "event_new"}
			}
		}
	}
}
